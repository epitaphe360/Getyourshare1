[build]
builder = "DOCKERFILE"
dockerfilePath = "Dockerfile"
buildCommand = "echo 'Building backend v2...'"

[deploy]
startCommand = "uvicorn server_complete:app --host 0.0.0.0 --port ${PORT:-8000} --workers 4"
restartPolicyType = "ON_FAILURE"
restartPolicyMaxRetries = 10
healthcheckPath = "/health"
healthcheckTimeout = 100
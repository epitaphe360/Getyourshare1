# ============================================
# GetYourShare - Environment Variables
# Copy to .env and fill with your values
# ============================================

# ============================================
# APPLICATION
# ============================================
ENVIRONMENT=production
APP_VERSION=1.0.0
DEBUG=false
APP_NAME=GetYourShare
APP_ENV=production
APP_URL=https://votre-app.railway.app
FRONTEND_URL=https://votre-frontend.railway.app
PORT=8001

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_NAME=shareyoursales
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Production database URL (alternative)
# DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================
# REDIS (Cache + Rate Limiting + Celery)
# ============================================
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://default:password@redis.railway.internal:6379

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your_jwt_secret_minimum_32_characters_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# STRIPE (Payment Processing)
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_votre_cle_secrete_stripe
STRIPE_PUBLISHABLE_KEY=pk_test_votre_cle_publique_stripe

# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_votre_webhook_secret

# ============================================
# CMI PAYMENT GATEWAY (Maroc)
# ============================================
CMI_MERCHANT_ID=votre_merchant_id
CMI_API_KEY=votre_cmi_api_key
CMI_API_URL=https://testpayment.cmi.co.ma/fim/api

# ============================================
# PAYZEN CONFIGURATION
# ============================================
PAYZEN_SHOP_ID=votre_shop_id
PAYZEN_API_KEY=votre_payzen_api_key
PAYZEN_API_URL=https://api.payzen.eu

# ============================================
# SOCIÉTÉ GÉNÉRALE MAROC
# ============================================
SG_MAROC_MERCHANT_ID=votre_merchant_id
SG_MAROC_API_KEY=votre_sg_api_key
SG_MAROC_API_URL=https://payment.societegenerale.ma/api

# ============================================
# MOBILE PAYMENTS MOROCCO (6 Providers)
# ============================================

# Cash Plus (Mobile Wallet)
# Get from: https://cashplus.ma/entreprises
CASHPLUS_API_KEY=your_cashplus_api_key
CASHPLUS_MERCHANT_ID=your_cashplus_merchant_id
CASHPLUS_API_URL=https://api.cashplus.ma
CASHPLUS_WEBHOOK_SECRET=your_cashplus_webhook_secret

# Wafacash (Attijariwafa bank)
# Get from: https://wafacash.ma
WAFACASH_API_KEY=your_wafacash_api_key
WAFACASH_MERCHANT_ID=your_wafacash_merchant_id
WAFACASH_API_URL=https://api.wafacash.ma
WAFACASH_WEBHOOK_SECRET=your_wafacash_webhook_secret

# Orange Money
# Get from: https://developer.orange.com/apis/orange-money-webpay/
ORANGE_MONEY_API_KEY=your_orange_money_api_key
ORANGE_MONEY_MERCHANT_ID=your_orange_merchant_id
ORANGE_MONEY_API_URL=https://api.orange.com/orange-money-webpay/ma/v1
ORANGE_MONEY_WEBHOOK_SECRET=your_orange_webhook_secret

# inwi money
# Get from: https://www.inwi.ma/inwimoney/entreprises
INWI_MONEY_API_KEY=your_inwi_money_api_key
INWI_MONEY_MERCHANT_ID=your_inwi_merchant_id
INWI_MONEY_API_URL=https://api.inwi.ma/money
INWI_MONEY_WEBHOOK_SECRET=your_inwi_webhook_secret

# Maroc Telecom Mobile Payment
# Get from: https://www.iam.ma/particuliers/mobile/mobile-money
MAROC_TELECOM_API_KEY=your_iam_api_key
MAROC_TELECOM_MERCHANT_ID=your_iam_merchant_id
MAROC_TELECOM_API_URL=https://api.iam.ma/payment
MAROC_TELECOM_WEBHOOK_SECRET=your_iam_webhook_secret

# CIH Mobile (CIH Bank)
# Get from: https://www.cihbank.ma
CIH_MOBILE_API_KEY=your_cih_mobile_api_key
CIH_MOBILE_MERCHANT_ID=your_cih_merchant_id
CIH_MOBILE_API_URL=https://api.cihbank.ma/mobile
CIH_MOBILE_WEBHOOK_SECRET=your_cih_webhook_secret

# ============================================
# INSTAGRAM GRAPH API
# ============================================
# Get from: https://developers.facebook.com/apps/
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=http://localhost:3000/auth/instagram/callback

# ============================================
# TIKTOK CREATOR API
# ============================================
# Get from: https://developers.facebook.com/apps/
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=http://localhost:3000/auth/tiktok/callback

# ============================================
# TIKTOK SHOP API (E-commerce Integration)
# ============================================
# Get from: https://partner.tiktokshop.com/
# Required for: Product sync, order tracking, live stream analytics
TIKTOK_SHOP_API_URL=https://open-api.tiktokglobalshop.com
TIKTOK_SHOP_APP_KEY=your_tiktok_shop_app_key
TIKTOK_SHOP_APP_SECRET=your_tiktok_shop_app_secret
TIKTOK_SHOP_ID=your_shop_id
TIKTOK_SHOP_ACCESS_TOKEN=your_access_token

# ============================================
# YOUTUBE DATA API
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
# Required for: Video analytics, channel stats
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CLIENT_ID=your_youtube_client_id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REDIRECT_URI=http://localhost:3000/auth/youtube/callback

# ============================================
# TWITTER/X API
# ============================================
# Get from: https://developer.twitter.com/en/portal/dashboard
# Required for: Tweet analytics, audience insights
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret

# ============================================
# FACEBOOK GRAPH API
# ============================================
# Get from: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:3000/auth/facebook/callback

# ============================================
# WHATSAPP BUSINESS API
# ============================================
# Get from: https://business.facebook.com/wa/manage/home/
# Required for: Transactional messages, affiliate link sharing, notifications
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# ============================================
# CLAUDE AI (Anthropic)
# ============================================
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# ============================================
# OPENAI (Alternative AI)
# ============================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# ============================================
# STABILITY AI (Image Generation)
# ============================================
# Get from: https://platform.stability.ai/account/keys
# Required for: AI-powered product image generation
STABILITY_API_KEY=sk-...

# ============================================
# SENTRY (Error Tracking & Monitoring)
# ============================================
# Get from: https://sentry.io/settings/projects/
SENTRY_DSN=https://votre_sentry_dsn@sentry.io/projet_id

# ============================================
# EMAIL (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre_email@gmail.com
SMTP_PASSWORD=votre_app_password
EMAIL_FROM_NAME=GetYourShare
EMAIL_FROM_ADDRESS=noreply@getyourshare.com

# SendGrid example
# SENDGRID_API_KEY=SG.votre_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@getyourshare.com

# ============================================
# AWS S3 (Optional - File Storage)
# ============================================
# Get from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=votre_aws_access_key
AWS_SECRET_ACCESS_KEY=votre_aws_secret_key
AWS_REGION=eu-west-3
AWS_S3_BUCKET=getyourshare-uploads

# ============================================
# CLOUDINARY (Alternative à S3 pour images)
# ============================================
CLOUDINARY_CLOUD_NAME=votre_cloud_name
CLOUDINARY_API_KEY=votre_api_key
CLOUDINARY_API_SECRET=votre_api_secret

# ============================================
# SUPABASE (Alternative to PostgreSQL + S3)
# ============================================
# Get from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://votre-projet.supabase.co
SUPABASE_ANON_KEY=votre_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=votre_supabase_service_role_key

# ============================================
# CELERY (Background Tasks)
# ============================================
CELERY_BROKER_URL=redis://:your_redis_password_here@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:your_redis_password_here@localhost:6379/1

# ============================================
# FLOWER (Celery Monitoring)
# ============================================
FLOWER_USER=admin
FLOWER_PASSWORD=your_flower_password

# ============================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================
VITE_API_URL=http://localhost:8000
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_votre_cle_publique_stripe

# Alternative Frontend/React App variables
REACT_APP_API_URL=https://votre-backend.railway.app
REACT_APP_SUPABASE_URL=https://votre-projet.supabase.co
REACT_APP_SUPABASE_ANON_KEY=votre_supabase_anon_key
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_votre_cle_publique

# ============================================
# ADMIN TOOLS (pgAdmin)
# ============================================
PGADMIN_EMAIL=admin@shareyoursales.ma
PGADMIN_PASSWORD=your_pgadmin_password

# ============================================
# SECURITY
# ============================================
# CORS origins (comma-separated)
ALLOWED_ORIGINS=https://votre-frontend.railway.app,https://votre-domaine.com,http://localhost:3000,https://shareyoursales.ma

# Trusted proxies (for rate limiting)
TRUSTED_PROXIES=127.0.0.1

# IP Whitelist (optional)
IP_WHITELIST=

# IP Blacklist (optional)
IP_BLACKLIST=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100  # requests per minute
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Encryption Key
ENCRYPTION_KEY=votre_cle_de_chiffrement_64_caracteres
SESSION_SECRET=votre_session_secret

# ============================================
# FILE UPLOADS
# ============================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# MOROCCAN TAX COMPLIANCE
# ============================================
TAX_COMPANY_NAME=ShareYourSales SARL
TAX_COMPANY_ICE=000000000000000
TAX_COMPANY_RC=123456
TAX_COMPANY_IF=12345678
TAX_VAT_RATE=20.0  # TVA 20%

# ============================================
# WEBHOOK URLS (Shopify, WooCommerce, etc.)
# ============================================
SHOPIFY_WEBHOOK_SECRET=votre_shopify_webhook_secret
WOOCOMMERCE_WEBHOOK_SECRET=votre_woocommerce_webhook_secret
TIKTOK_WEBHOOK_SECRET=votre_tiktok_webhook_secret

# ============================================
# SCHEDULER CONFIGURATION
# ============================================
# Activer/désactiver les paiements automatiques
AUTO_PAYMENTS_ENABLED=true
SCHEDULER_TIMEZONE=Africa/Casablanca

# ============================================
# ANALYTICS (Google, Facebook, etc.)
# ============================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=votre_pixel_id

# ============================================
# TWILIO (SMS/2FA)
# ============================================
TWILIO_ACCOUNT_SID=votre_account_sid
TWILIO_AUTH_TOKEN=votre_auth_token
TWILIO_PHONE_NUMBER=+1234567890


# ============================================
# ShareYourSales - Environment Variables
# Copy to .env and fill with your values
# ============================================

# ============================================
# APPLICATION
# ============================================
ENVIRONMENT=development
APP_VERSION=1.0.0
DEBUG=true

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_NAME=shareyoursales
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Production database URL (alternative)
# DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================
# REDIS (Cache + Rate Limiting + Celery)
# ============================================
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@localhost:6379/0

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your_jwt_secret_minimum_32_characters_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# STRIPE (Payment Processing)
# ============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_... # Production: sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_test_... # Production: pk_live_...

# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# INSTAGRAM GRAPH API
# ============================================
# Get from: https://developers.facebook.com/apps/
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=http://localhost:3000/auth/instagram/callback

# ============================================
# TIKTOK CREATOR API
# ============================================
# Get from: https://developers.tiktok.com/apps/
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=http://localhost:3000/auth/tiktok/callback

# ============================================
# FACEBOOK GRAPH API
# ============================================
# Get from: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:3000/auth/facebook/callback

# ============================================
# CLAUDE AI (Anthropic)
# ============================================
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# ============================================
# OPENAI (Alternative AI)
# ============================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# ============================================
# SENTRY (Error Tracking & Monitoring)
# ============================================
# Get from: https://sentry.io/settings/projects/
SENTRY_DSN=https://...@sentry.io/...

# ============================================
# EMAIL (SMTP)
# ============================================
# Gmail example
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_password

# SendGrid example
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=SG.xxx

# Mailgun example
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_USER=postmaster@your-domain.com
# SMTP_PASSWORD=your_mailgun_password

EMAIL_FROM_NAME=ShareYourSales
EMAIL_FROM_ADDRESS=noreply@shareyoursales.ma

# ============================================
# AWS S3 (Optional - File Storage)
# ============================================
# Get from: https://console.aws.amazon.com/iam/
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=eu-west-1
AWS_S3_BUCKET=shareyoursales-uploads

# ============================================
# SUPABASE (Alternative to PostgreSQL + S3)
# ============================================
# Get from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGci...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGci...

# ============================================
# CELERY (Background Tasks)
# ============================================
CELERY_BROKER_URL=redis://:your_redis_password_here@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:your_redis_password_here@localhost:6379/1

# ============================================
# FLOWER (Celery Monitoring)
# ============================================
FLOWER_USER=admin
FLOWER_PASSWORD=your_flower_password

# ============================================
# FRONTEND
# ============================================
VITE_API_URL=http://localhost:8000
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...

# ============================================
# ADMIN TOOLS (pgAdmin)
# ============================================
PGADMIN_EMAIL=admin@shareyoursales.ma
PGADMIN_PASSWORD=your_pgadmin_password

# ============================================
# SECURITY
# ============================================
# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://shareyoursales.ma

# Trusted proxies (for rate limiting)
TRUSTED_PROXIES=127.0.0.1

# IP Whitelist (optional)
IP_WHITELIST=

# IP Blacklist (optional)
IP_BLACKLIST=

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100  # requests per minute

# ============================================
# FILE UPLOADS
# ============================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# MOROCCAN TAX COMPLIANCE
# ============================================
TAX_COMPANY_NAME=ShareYourSales SARL
TAX_COMPANY_ICE=000000000000000
TAX_COMPANY_RC=123456
TAX_COMPANY_IF=12345678
TAX_VAT_RATE=20.0  # TVA 20%

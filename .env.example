# ============================================
# CONFIGURATION RAILWAY - GETYOURSHARE
# ============================================

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Obtenir ces valeurs depuis: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://votre-projet.supabase.co
SUPABASE_KEY=votre_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=votre_supabase_service_role_key

# ============================================
# JWT CONFIGURATION
# ============================================
# Générer une clé secrète: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=votre_secret_jwt_tres_securise
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# STRIPE CONFIGURATION
# ============================================
# Obtenir depuis: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_votre_cle_secrete_stripe
STRIPE_PUBLISHABLE_KEY=pk_test_votre_cle_publique_stripe
STRIPE_WEBHOOK_SECRET=whsec_votre_webhook_secret

# ============================================
# CMI PAYMENT GATEWAY (Maroc)
# ============================================
CMI_MERCHANT_ID=votre_merchant_id
CMI_API_KEY=votre_cmi_api_key
CMI_API_URL=https://testpayment.cmi.co.ma/fim/api

# ============================================
# PAYZEN CONFIGURATION
# ============================================
PAYZEN_SHOP_ID=votre_shop_id
PAYZEN_API_KEY=votre_payzen_api_key
PAYZEN_API_URL=https://api.payzen.eu

# ============================================
# SOCIÉTÉ GÉNÉRALE MAROC
# ============================================
SG_MAROC_MERCHANT_ID=votre_merchant_id
SG_MAROC_API_KEY=votre_sg_api_key
SG_MAROC_API_URL=https://payment.societegenerale.ma/api

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre_email@gmail.com
SMTP_PASSWORD=votre_app_password
SMTP_FROM_EMAIL=noreply@getyourshare.com
SMTP_FROM_NAME=GetYourShare

# ============================================
# SENDGRID (Alternative à SMTP)
# ============================================
SENDGRID_API_KEY=SG.votre_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@getyourshare.com

# ============================================
# AWS S3 (Stockage fichiers/images)
# ============================================
AWS_ACCESS_KEY_ID=votre_aws_access_key
AWS_SECRET_ACCESS_KEY=votre_aws_secret_key
AWS_REGION=eu-west-3
AWS_S3_BUCKET=getyourshare-uploads

# ============================================
# CLOUDINARY (Alternative à S3 pour images)
# ============================================
CLOUDINARY_CLOUD_NAME=votre_cloud_name
CLOUDINARY_API_KEY=votre_api_key
CLOUDINARY_API_SECRET=votre_api_secret

# ============================================
# REDIS CONFIGURATION (Cache & Sessions)
# ============================================
REDIS_URL=redis://default:password@redis.railway.internal:6379

# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_NAME=GetYourShare
APP_ENV=production
APP_DEBUG=false
APP_URL=https://votre-app.railway.app
FRONTEND_URL=https://votre-frontend.railway.app

# Port pour Railway (automatique)
PORT=8001

# ============================================
# CORS CONFIGURATION
# ============================================
ALLOWED_ORIGINS=https://votre-frontend.railway.app,https://votre-domaine.com

# ============================================
# WEBHOOK URLS (Shopify, WooCommerce, etc.)
# ============================================
SHOPIFY_WEBHOOK_SECRET=votre_shopify_webhook_secret
WOOCOMMERCE_WEBHOOK_SECRET=votre_woocommerce_webhook_secret
TIKTOK_WEBHOOK_SECRET=votre_tiktok_webhook_secret

# ============================================
# SCHEDULER CONFIGURATION
# ============================================
# Activer/désactiver les paiements automatiques
AUTO_PAYMENTS_ENABLED=true
SCHEDULER_TIMEZONE=Africa/Casablanca

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=INFO
SENTRY_DSN=https://votre_sentry_dsn@sentry.io/projet_id

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# SECURITY
# ============================================
# Générer: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=votre_cle_de_chiffrement_64_caracteres
SESSION_SECRET=votre_session_secret

# ============================================
# ANALYTICS (Google, Facebook, etc.)
# ============================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=votre_pixel_id

# ============================================
# TWILIO (SMS/2FA)
# ============================================
TWILIO_ACCOUNT_SID=votre_account_sid
TWILIO_AUTH_TOKEN=votre_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================
REACT_APP_API_URL=https://votre-backend.railway.app
REACT_APP_SUPABASE_URL=https://votre-projet.supabase.co
REACT_APP_SUPABASE_ANON_KEY=votre_supabase_anon_key
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_votre_cle_publique
REACT_APP_ENVIRONMENT=production

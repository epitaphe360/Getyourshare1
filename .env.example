# ==============================================================================
# FICHIER .env.example - Getyourshare1
#
# Ce fichier liste toutes les variables d'environnement nécessaires pour le
# bon fonctionnement de l'application.
#
# REMPLACER LES VALEURS PAR DE VRAIS SECRETS AVANT LE DÉPLOIEMENT EN PRODUCTION.
# ==============================================================================

# ------------------------------------------------------------------------------
# 1. CONFIGURATION DE BASE
# ------------------------------------------------------------------------------
ENVIRONMENT=production
APP_VERSION=1.0.0
DEBUG=false
APP_NAME=GetYourShare
APP_ENV=production
APP_URL=https://votre-app.railway.app
FRONTEND_URL=https://votre-frontend.railway.app
PORT=8001

# ------------------------------------------------------------------------------
# 2. AUTHENTIFICATION & SÉCURITÉ
# ------------------------------------------------------------------------------
# Clé secrète pour la signature des tokens JWT (minimum 32 caractères aléatoires)
# Générer avec : openssl rand -hex 32
JWT_SECRET="GENERER_UN_SECRET_SECURISE_ICI"
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Clé secrète pour les sessions (si utilisée)
SESSION_SECRET="GENERER_UN_SECRET_SECURISE_ICI"
ENCRYPTION_KEY="votre_cle_de_chiffrement_64_caracteres"

# CORS origins (comma-separated)
ALLOWED_ORIGINS=https://votre-frontend.railway.app,https://votre-domaine.com,http://localhost:3000,https://shareyoursales.ma

# ------------------------------------------------------------------------------
# 3. BASE DE DONNÉES (SUPABASE / POSTGRESQL)
# ------------------------------------------------------------------------------
# URL de connexion complète à la base de données PostgreSQL
# Exemple : postgresql://user:password@host:port/dbname
DATABASE_URL="postgresql://postgres:password@db.supabase.co:5432/postgres"

# URL de votre projet Supabase
SUPABASE_URL="https://votre-projet-id.supabase.co"

# Clé du rôle de service Supabase (service_role key - NE JAMAIS EXPOSER CÔTÉ CLIENT)
SUPABASE_SERVICE_ROLE_KEY="votre-service-role-key-ici"

# Clé anonyme Supabase (anon key - peut être exposée côté client)
SUPABASE_ANON_KEY="votre-anon-key-ici"

# ------------------------------------------------------------------------------
# 4. PAIEMENTS (STRIPE)
# ------------------------------------------------------------------------------
# Clé secrète Stripe (sk_live_ ou sk_test_)
STRIPE_SECRET_KEY="sk_live_votre_cle_secrete_stripe"

# Clé publique Stripe (pk_live_ ou pk_test_)
STRIPE_PUBLISHABLE_KEY="pk_test_votre_cle_publique_stripe"

# Secret de signature pour la vérification des webhooks Stripe (whsec_)
STRIPE_WEBHOOK_SECRET="whsec_votre_secret_webhook_stripe"

# ------------------------------------------------------------------------------
# 5. PASSERELLES DE PAIEMENT ALTERNATIVES (MAROC)
# ------------------------------------------------------------------------------
# CMI (Centre Monétique Interbancaire)
CMI_API_KEY="votre_cmi_api_key"

# PayZen
PAYZEN_API_KEY="votre_payzen_api_key"

# SGMA (Société Générale Marocaine de Banques)
SGMA_SECRET_KEY="votre_sgma_secret_key"

# PayPal
PAYPAL_CLIENT_SECRET="votre_paypal_client_secret"

# CashPlus
CASHPLUS_API_KEY="votre_cashplus_api_key"
CASHPLUS_SECRET="votre_cashplus_secret"

# Orange Money
ORANGE_MONEY_API_KEY="votre_orange_money_api_key"
ORANGE_MONEY_SECRET="votre_orange_money_secret"

# MT Cash
MT_CASH_API_KEY="votre_mt_cash_api_key"

# ------------------------------------------------------------------------------
# 6. SERVICES TIERS (IA, EMAIL, STOCKAGE)
# ------------------------------------------------------------------------------
# OpenAI API Key (pour le Content Studio et l'IA Marketing)
OPENAI_API_KEY="sk-votre-openai-key"

# Anthropic API Key (pour le Content Studio et l'IA Marketing)
ANTHROPIC_API_KEY="sk-ant-votre-anthropic-key"

# SendGrid API Key (pour l'envoi d'emails transactionnels)
SENDGRID_API_KEY="SG.votre-sendgrid-key"

# AWS S3 (pour le stockage des images et documents KYC)
AWS_ACCESS_KEY_ID="votre_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="votre_aws_secret_access_key"
AWS_REGION="eu-west-1" # Exemple
AWS_S3_BUCKET="getyourshare-uploads"

# ------------------------------------------------------------------------------
# 7. INTÉGRATIONS RÉSEAUX SOCIAUX
# ------------------------------------------------------------------------------
# Instagram
INSTAGRAM_CLIENT_SECRET="votre_instagram_client_secret"

# Facebook
FACEBOOK_APP_SECRET="votre_facebook_app_secret"

# TikTok
TIKTOK_CLIENT_SECRET="votre_tiktok_client_secret"

# TikTok Shop
TIKTOK_SHOP_APP_SECRET="votre_tiktok_shop_app_secret"

# ------------------------------------------------------------------------------
# 8. AUTRES CONFIGURATIONS
# ------------------------------------------------------------------------------
# Twilio (SMS/2FA)
TWILIO_ACCOUNT_SID=votre_account_sid
TWILIO_AUTH_TOKEN=votre_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Sentry (Error Tracking & Monitoring)
SENTRY_DSN=https://votre_sentry_dsn@sentry.io/projet_id

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://:your_redis_password_here@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:your_redis_password_here@localhost:6379/1

# Frontend Environment Variables (React)
REACT_APP_API_URL=https://votre-backend.railway.app
REACT_APP_SUPABASE_URL=https://votre-projet.supabase.co
REACT_APP_SUPABASE_ANON_KEY=votre_supabase_anon_key
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_votre_cle_publique

# Configuration Marocaine
TAX_COMPANY_NAME=ShareYourSales SARL
TAX_COMPANY_ICE=000000000000000
TAX_COMPANY_RC=123456
TAX_COMPANY_IF=12345678
TAX_VAT_RATE=20.0  # TVA 20%
